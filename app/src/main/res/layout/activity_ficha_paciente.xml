<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:whilu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.FichaPacienteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digite as informações abaixo"
            android:textSize="18sp"
            android:textColor="@drawable/txt_selector"/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <io.ghyeok.stickyswitch.widget.StickySwitch
            android:id="@+id/sticky_switch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            app:ss_animationDuration="600"
            app:ss_animationType="line"
            app:ss_iconPadding="18dp"
            app:ss_iconSize="22dp"
            app:ss_leftIcon="@drawable/ic_male"
            app:ss_leftText="M"
            app:ss_rightIcon="@drawable/ic_fem"
            app:ss_rightText="F"
            app:ss_selectedTextSize="14sp"
            app:ss_sliderBackgroundColor="@color/colorStickyBack"
            app:ss_switchColor="@color/colorSticky"
            app:ss_textColor="@color/colorStickyBack"
            app:ss_textSize="12sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <NumberPicker
                android:gravity="left"
                android:id="@+id/numberPicker"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                 />


            <TextView
                android:id="@+id/mostraNumeroSessoes"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero de sessões"
                android:textSize="16sp" />



        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyle"
        android:theme="@style/TextInputLayoutStyle"
        android:id="@+id/textInputLayoutNomePaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayoutNomePaciente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07999998"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editNomePaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome Completo"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyle"
        android:theme="@style/TextInputLayoutStyle"
        android:id="@+id/textInputLayoutProfissaoPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayoutProfissaoPaciente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07999998"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editProfissaoPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sua Profissão"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyle"
        android:theme="@style/TextInputLayoutStyle"
        android:id="@+id/textInputLayoutQueixaPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayoutQueixaPaciente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07999998"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editQueixaPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Queixa Pricipal"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyle"
        android:theme="@style/TextInputLayoutStyle"
        android:id="@+id/textInputLayoutDiagnosticoMedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayoutDiagnosticoMedico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07999998"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editDiagnosticoMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Diagnostico Médico"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>



    <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_margin="8dp"
           android:background="@drawable/border_layout"

        android:orientation="horizontal" >

            <com.santalu.maskedittext.MaskEditText
                android:id="@+id/editTelefonePaciente"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="(xx) xxxxx xxxx"
                android:layout_gravity="left"
                android:inputType="number"
                app:met_mask="(##) ##### ####"/>

            <com.santalu.maskedittext.MaskEditText
                android:layout_marginBottom="1dp"
                android:id="@+id/editDataNascPaciente"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:inputType="date"
                android:hint=" xx/ xx/ xxxxx"
                app:met_mask="##/ ##/ ####"/>

       </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnSalvaFichaPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/botao_salva_ficha"
            android:padding="8dp"
            android:text="Salvar"
            android:textSize="18sp"
            android:textColor="@drawable/txt_selector"/>

    </LinearLayout>









</LinearLayout>